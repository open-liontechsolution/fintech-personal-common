{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "rootDir": ".",
    "sourceMap": true
  },
  "include": ["src/**/*", "schemas/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "dist"]
}